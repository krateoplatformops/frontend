{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "type": "string",
      "default": "Route"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "type": "object",
          "required": ["label", "path", "icon"],
          "properties": {
            "label": {
              "type": "string"
            },
            "path": {
              "type": "string"
            },
            "icon": {
              "type": "string"
            },
            "backendEndpointId": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"]
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            }
          }
        },
        "backendEndpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "apiVersion", "name", "namespace", "resource", "verb"],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "apiVersion": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "namespace": {
                "type": "string"
              },
              "resource": {
                "type": "string"
              },
              "verb": {
                "type": "string",
                "enum": ["GET", "POST", "DELETE"]
              }
            }
          }
        }
      },
      "required": ["widgetData"]
    }
  },
  "required": ["kind", "spec", "version"]
}
