{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "type": "string",
      "default": "Panel"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "type": "object",
          "required": ["items"],
          "properties": {
            "clickActionId": {
              "description": "the id of the action to be executed when the panel is clicked",
              "type": "string"
            },
            "footer": {
              "type": "object",
              "required": ["items"],
              "properties": {
                "items": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["resourceRefId"],
                    "properties": {
                      "resourceRefId": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "tag": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "icon": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "color": {
                  "type": "string"
                }
              },
              "required": ["name"],
              "additionalProperties": false
            },
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["resourceRefId"],
                "properties": {
                  "resourceRefId": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            },
            "title": {
              "type": "string"
            },
            "tooltip": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "resourcesRefs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "apiVersion", "name", "namespace", "resource", "verb"],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "apiVersion": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "namespace": {
                "type": "string"
              },
              "resource": {
                "type": "string"
              },
              "verb": {
                "type": "string",
                "enum": ["GET", "POST", "DELETE"]
              }
            }
          }
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"],
          "additionalProperties": false
        },
        "actions": {
          "description": "the actions of the panel",
          "type": "object",
          "properties": {
            "navigate": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["navigate"]
                  },
                  "name": {
                    "type": "string"
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "resourceRefId"]
              }
            }
          },
          "additionalProperties": false
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["widgetData", "resourcesRefs"],
      "additionalProperties": false
    }
  },
  "required": ["kind", "spec", "version"]
}
