{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "default": "Panel",
      "description": "Panel is a container to display information",
      "type": "string"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "type": "object",
          "required": ["items"],
          "properties": {
            "clickActionId": {
              "type": "string",
              "description": "the id of the action to be executed when the panel is clicked"
            },
            "footer": {
              "type": "object",
              "description": "footer section of the panel containing additional items and tags",
              "required": ["items"],
              "properties": {
                "items": {
                  "type": "array",
                  "description": "list of resource references to render in the footer",
                  "items": {
                    "type": "object",
                    "required": ["resourceRefId"],
                    "properties": {
                      "resourceRefId": {
                        "type": "string",
                        "description": "the identifier of the k8s custom resource that should be represented, usually a widget"
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "tags": {
                  "type": "array",
                  "description": "list of string tags to be displayed in the footer",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            },
            "icon": {
              "type": "object",
              "description": "icon displayed in the panel header",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "name of the icon to display (font awesome icon name eg: `fa-inbox`)"
                },
                "color": {
                  "type": "string",
                  "description": "color of the icon"
                }
              },
              "additionalProperties": false
            },
            "items": {
              "type": "array",
              "description": "list of resource references to display as main content in the panel",
              "items": {
                "type": "object",
                "required": ["resourceRefId"],
                "properties": {
                  "resourceRefId": {
                    "type": "string",
                    "description": "the identifier of the k8s custom resource that should be represented, usually a widget"
                  }
                },
                "additionalProperties": false
              }
            },
            "title": {
              "type": "string",
              "description": "text to be displayed as the panel title"
            },
            "tooltip": {
              "type": "string",
              "description": "optional tooltip text shown on the top right side of the card to provide additional context"
            }
          },
          "additionalProperties": false
        },
        "resourcesRefs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "apiVersion",
              "name",
              "namespace",
              "resource",
              "verb"
            ],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "apiVersion": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "namespace": {
                "type": "string"
              },
              "resource": {
                "type": "string"
              },
              "verb": {
                "type": "string",
                "enum": ["GET", "POST", "DELETE"]
              }
            }
          }
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"],
          "additionalProperties": false
        },
        "actions": {
          "description": "the actions of the panel",
          "type": "object",
          "properties": {
            "rest": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "onSuccessNavigateTo": {
                    "type": "string"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  },
                  "type": {
                    "type": "string",
                    "enum": ["rest"]
                  },
                  "payload": {
                    "type": "object",
                    "additionalProperties": true
                  }
                },
                "required": ["id", "resourceRefId"]
              }
            },
            "navigate": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["navigate"]
                  },
                  "name": {
                    "type": "string"
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "resourceRefId"]
              }
            },
            "openDrawer": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["openDrawer"]
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "resourceRefId"]
              }
            },
            "openModal": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["openModal"]
                  },
                  "name": {
                    "type": "string"
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "resourceRefId"]
              }
            }
          },
          "additionalProperties": false
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["widgetData", "resourcesRefs"],
      "additionalProperties": false
    }
  },
  "required": ["kind", "spec", "version"]
}
