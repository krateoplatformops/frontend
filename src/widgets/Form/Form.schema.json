{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "description": "widget version",
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "type": "string",
      "description": "name of the k8s Custom Resource",
      "default": "Form"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "description": "the data that will be passed to the widget on the frontend",
          "type": "object",
          "required": ["schema", "submitActionId"],
          "properties": {
            "schema": {
              "description": "the schema of the form",
              "type": "object"
            },
            "submitActionId": {
              "description": "the id of the action to be called when the form is submitted",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"]
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            }
          }
        },
        "actions": {
          "description": "the actions of the button",
          "type": "object",
          "properties": {
            "rest": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "onSuccessNavigateTo": {
                    "type": "string"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  },
                  "type": {
                    "type": "string",
                    "enum": ["rest"]
                  }
                },
                "required": ["id", "resourceRefId"]
              }
            },
            "navigate": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["navigate"]
                  },
                  "name": {
                    "type": "string"
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "resourceRefId"]
              }
            },
            "openDrawer": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["openDrawer"]
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "contentWidgetRef"]
              }
            },
            "openModal": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["openModal"]
                  },
                  "name": {
                    "type": "string"
                  },
                  "contentWidgetRef": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "contentWidgetRef"]
              }
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["widgetData", "actions"]
    }
  },
  "required": ["kind", "spec", "version"]
}
