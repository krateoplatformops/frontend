{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "description": "widget version",
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "type": "string",
      "description": "name of the k8s Custom Resource",
      "default": "Form"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "description": "the data that will be passed to the widget on the frontend",
          "type": "object",
          "required": ["actions", "submitActionId"],
          "properties": {
            "actions": {
              "description": "the actions of the form",
              "type": "object",
              "properties": {
                "rest": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "payloadKey": {
                        "type": "string",
                        "description": "the key to nest the payload to"
                      },
                      "id": {
                        "type": "string"
                      },
                      "resourceRefId": {
                        "type": "string"
                      },
                      "requireConfirmation": {
                        "type": "boolean"
                      },
                      "onSuccessNavigateTo": {
                        "type": "string"
                      },
                      "onEventNavigateTo": {
                        "type": "object",
                        "required": ["eventReason", "url"],
                        "additionalProperties": false,
                        "properties": {
                          "eventReason": {
                            "type": "string"
                          },
                          "url": {
                            "type": "string"
                          },
                          "timeout": {
                            "type": "integer",
                            "description": "the timeout in seconds to wait for the event",
                            "default": 50
                          }
                        }
                      },
                      "loading": {
                        "type": "string",
                        "enum": ["global", "inline", "none"]
                      },
                      "type": {
                        "type": "string",
                        "enum": ["rest"]
                      },
                      "payload": {
                        "type": "object",
                        "additionalProperties": true
                      },
                      "payloadToOverride": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "additionalProperties": false,
                          "required": ["name", "value"],
                          "properties": {
                            "name": {
                              "type": "string"
                            },
                            "value": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    },
                    "required": ["id", "resourceRefId", "payloadKey"]
                  }
                },
                "navigate": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string",
                        "enum": ["navigate"]
                      },
                      "name": {
                        "type": "string"
                      },
                      "resourceRefId": {
                        "type": "string"
                      },
                      "requireConfirmation": {
                        "type": "boolean"
                      },
                      "loading": {
                        "type": "string",
                        "enum": ["global", "inline", "none"]
                      }
                    },
                    "required": ["id", "type", "name", "resourceRefId"]
                  }
                },
                "openDrawer": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string",
                        "enum": ["openDrawer"]
                      },
                      "resourceRefId": {
                        "type": "string"
                      },
                      "requireConfirmation": {
                        "type": "boolean"
                      },
                      "loading": {
                        "type": "string",
                        "enum": ["global", "inline", "none"]
                      },
                      "size": {
                        "type": "string",
                        "enum": ["default", "large"]
                      },
                      "title": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "id",
                      "type",
                      "contentWidgetRef",
                      "resourceRefId"
                    ]
                  }
                },
                "openModal": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string",
                        "enum": ["openModal"]
                      },
                      "name": {
                        "type": "string"
                      },
                      "contentWidgetRef": {
                        "type": "string"
                      },
                      "resourceRefId": {
                        "type": "string"
                      },
                      "requireConfirmation": {
                        "type": "boolean"
                      },
                      "loading": {
                        "type": "string",
                        "enum": ["global", "inline", "none"]
                      },
                      "title": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "id",
                      "type",
                      "name",
                      "contentWidgetRef",
                      "resourceRefId"
                    ]
                  }
                }
              },
              "additionalProperties": false
            },
            "schema": {
              "description": "the schema of the form as an object",
              "type": "object",
              "additionalProperties": false
            },
            "stringSchema": {
              "description": "the schema of the form as a string",
              "type": "string"
            },
            "submitActionId": {
              "description": "the id of the action to be called when the form is submitted",
              "type": "string"
            },
            "fieldDescription": {
              "type": "string",
              "enum": ["tooltip", "inline"],
              "default": "inline"
            }
          },
          "additionalProperties": false
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"],
          "additionalProperties": false
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["widgetData"],
      "additionalProperties": false
    }
  },
  "required": ["kind", "spec", "version"]
}
