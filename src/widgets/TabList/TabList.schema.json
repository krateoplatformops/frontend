{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "description": "widget version",
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "default": "TabList",
      "description": "TabList display a set of tab items for navigation or content grouping",
      "type": "string"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "description": "the data that will be passed to the widget on the frontend",
          "type": "object",
          "required": ["items", "label"],
          "properties": {
            "items": {
              "type": "array",
              "description": "the items of the tab list",
              "items": {
                "type": "object",
                "required": ["resourceRefId"],
                "properties": {
                  "label": {
                    "type": "string",
                    "description": "text displayed on the tab"
                  },
                  "resourceRefId": {
                    "type": "string",
                    "description": "the identifier of the k8s custom resource represented by the tab content"
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "resourcesRefs": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "id",
                  "apiVersion",
                  "name",
                  "namespace",
                  "resource",
                  "verb"
                ],
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "apiVersion": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "namespace": {
                    "type": "string"
                  },
                  "resource": {
                    "type": "string"
                  },
                  "verb": {
                    "type": "string",
                    "enum": ["DELETE", "GET", "PATCH", "POST", "PUT"]
                  }
                }
              }
            }
          }
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": ["name", "namespace"]
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "additionalProperties": false
        }
      },
      "required": ["widgetData", "resourcesRefs"],
      "additionalProperties": false
    }
  },
  "required": ["kind", "spec", "version"]
}
