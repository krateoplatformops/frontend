{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "default": "Markdown",
      "description": "Markdown receives markdown in string format and renders it gracefully",
      "type": "string"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "type": "object",
          "required": ["markdown", "items"],
          "properties": {
            "allowCopy": {
              "description": "displays a copy button on top of the widget to allow copy to clipboard",
              "type": "boolean"
            },
            "allowDownload": {
              "description": "displays a download button on top of the widget to allow download of the text",
              "type": "boolean"
            },
            "downloadFileExtension": {
              "description": "if 'allowDownload' is set, this property allows to set an extension for the downloaded file. Default is .txt",
              "type": "string"
            },
            "markdown": {
              "description": "markdown string to be displayed",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": ["name", "namespace"]
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "additionalProperties": false
        }
      },
      "required": ["widgetData"],
      "additionalProperties": false
    }
  },
  "required": ["kind", "spec", "version"]
}
