{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "description": "widget version",
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "type": "string",
      "description": "name of the k8s Custom Resource",
      "default": "Row"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "description": "the data that will be passed to the widget on the frontend",
          "type": "object",
          "required": ["items"],
          "properties": {
            "items": {
              "description": "the items of the row",
              "type": "array",
              "items": {
                "type": "object",
                "required": ["resourceRefId"],
                "properties": {
                  "resourceRefId": {
                    "type": "string"
                  },
                  "size": {
                    "description": "the number of cells that the item will occupy, from 0 (not displayed) to 24 (occupies all space)",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 24
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "resourcesRefs": {
          "type": "object",
          "properties": {
            "offset": {
              "type": "integer"
            },
            "page": {
              "type": "integer"
            },
            "perPage": {
              "type": "integer"
            },
            "continue": {
              "type": "boolean"
            },
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "namespace": {
                    "type": "string"
                  },
                  "resource": {
                    "type": "string"
                  },
                  "apiVersion": {
                    "type": "string"
                  },
                  "verb": {
                    "type": "string",
                    "enum": ["POST", "PUT", "PATCH", "DELETE", "GET"]
                  },
                  "payload": {
                    "type": "object"
                  }
                },
                "required": ["id"]
              }
            }
          },
          "required": ["items"]
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"],
          "additionalProperties": false
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "additionalProperties": false
        }
      },
      "required": ["widgetData", "resourcesRefs"],
      "additionalProperties": false
    }
  },
  "required": ["kind", "spec", "version"]
}
