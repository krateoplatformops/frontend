{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "type": "string",
      "default": "BarChart"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "type": "object",
          "required": ["data"],
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["bars"],
                "properties": {
                  "label": {
                    "type": "string"
                  },
                  "bars": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["value", "percentage"],
                      "properties": {
                        "value": {
                          "type": "string"
                        },
                        "percentage": {
                          "type": "integer"
                        },
                        "color": {
                          "type": "string",
                          "enum": [
                            "blue",
                            "darkBlue",
                            "orange",
                            "gray",
                            "red",
                            "green"
                          ]
                        }
                      },
                      "additionalProperties": false
                    }
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": ["name", "namespace"]
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false,
      "required": ["widgetData"]
    }
  },
  "required": ["kind", "spec", "version"]
}
