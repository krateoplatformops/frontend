{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "default": "CompositionCard",
      "description": "CompositionCard represents a container to display information about a Composition",
      "type": "string"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "type": "object",
          "properties": {
            "actions": {
              "description": "the actions of the form",
              "type": "object",
              "properties": {
                "rest": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "payloadKey": {
                        "type": "string",
                        "description": "the key to nest the payload to"
                      },
                      "id": {
                        "type": "string"
                      },
                      "resourceRefId": {
                        "type": "string"
                      },
                      "requireConfirmation": {
                        "type": "boolean"
                      },
                      "onSuccessNavigateTo": {
                        "type": "string"
                      },
                      "onEventNavigateTo": {
                        "type": "object",
                        "required": ["eventReason", "url"],
                        "additionalProperties": false,
                        "properties": {
                          "eventReason": {
                            "type": "string"
                          },
                          "url": {
                            "type": "string"
                          },
                          "timeout": {
                            "type": "integer",
                            "description": "the timeout in seconds to wait for the event",
                            "default": 50
                          }
                        }
                      },
                      "loading": {
                        "type": "string",
                        "enum": ["global", "inline", "none"]
                      },
                      "type": {
                        "type": "string",
                        "enum": ["rest"]
                      },
                      "payload": {
                        "type": "object",
                        "additionalProperties": true
                      },
                      "payloadToOverride": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "additionalProperties": false,
                          "required": ["name", "value"],
                          "properties": {
                            "name": {
                              "type": "string"
                            },
                            "value": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    },
                    "required": ["id", "resourceRefId", "payloadKey"]
                  }
                },
                "navigate": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string",
                        "enum": ["navigate"]
                      },
                      "name": {
                        "type": "string"
                      },
                      "resourceRefId": {
                        "type": "string"
                      },
                      "requireConfirmation": {
                        "type": "boolean"
                      },
                      "loading": {
                        "type": "string",
                        "enum": ["global", "inline", "none"]
                      }
                    },
                    "required": ["id", "type", "name", "resourceRefId"]
                  }
                },
                "openDrawer": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string",
                        "enum": ["openDrawer"]
                      },
                      "resourceRefId": {
                        "type": "string"
                      },
                      "requireConfirmation": {
                        "type": "boolean"
                      },
                      "loading": {
                        "type": "string",
                        "enum": ["global", "inline", "none"]
                      },
                      "size": {
                        "type": "string",
                        "enum": ["default", "large"]
                      },
                      "title": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "id",
                      "type",
                      "contentWidgetRef",
                      "resourceRefId"
                    ]
                  }
                },
                "openModal": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string",
                        "enum": ["openModal"]
                      },
                      "name": {
                        "type": "string"
                      },
                      "contentWidgetRef": {
                        "type": "string"
                      },
                      "resourceRefId": {
                        "type": "string"
                      },
                      "requireConfirmation": {
                        "type": "boolean"
                      },
                      "loading": {
                        "type": "string",
                        "enum": ["global", "inline", "none"]
                      },
                      "title": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "id",
                      "type",
                      "name",
                      "contentWidgetRef",
                      "resourceRefId"
                    ]
                  }
                }
              },
              "additionalProperties": false
            },
            "date": {
              "type": "string",
              "description": "date associated with the composition, typically its creation time"
            },
            "description": {
              "type": "string",
              "description": "short text describing the composition's purpose or status"
            },
            "icon": {
              "type": "object",
              "description": "icon displayed on the card",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "icon name to display (font awesome icon name eg: `fa-inbox`)"
                },
                "color": {
                  "type": "string",
                  "description": "color of the icon"
                }
              },
              "required": ["name"],
              "additionalProperties": false
            },
            "status": {
              "type": "string",
              "description": "current status of the composition (e.g., running, failed, pending)"
            },
            "tags": {
              "type": "array",
              "description": "list of tags for categorizing or filtering the composition",
              "items": {
                "type": "string"
              }
            },
            "title": {
              "type": "string",
              "description": "main title of the card, usually the name of the composition"
            },
            "tooltip": {
              "type": "string",
              "description": "optional tooltip text shown on the top right side of the card to provide additional context"
            },
            "deleteCompositionActionId": {
              "type": "string",
              "description": "id of the action triggered when the delete button is clicked"
            },
            "navigateToDetailActionId": {
              "type": "string",
              "description": "id of the action triggered when the card is clicked"
            }
          },
          "required": ["actions"],
          "additionalProperties": false
        },
        "resourcesRefs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "apiVersion",
              "name",
              "namespace",
              "resource",
              "verb"
            ],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "apiVersion": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "namespace": {
                "type": "string"
              },
              "resource": {
                "type": "string"
              },
              "verb": {
                "type": "string",
                "enum": ["GET", "POST", "DELETE"]
              }
            }
          }
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"],
          "additionalProperties": false
        },
        "actions": {
          "description": "the actions of the panel",
          "type": "object",
          "properties": {
            "navigate": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["navigate"]
                  },
                  "name": {
                    "type": "string"
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "resourceRefId"]
              }
            },
            "rest": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "onSuccessNavigateTo": {
                    "type": "string"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  },
                  "type": {
                    "type": "string",
                    "enum": ["rest"]
                  }
                },
                "required": ["id", "resourceRefId"]
              }
            },
            "openDrawer": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["openDrawer"]
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  },
                  "size": {
                    "type": "string",
                    "enum": ["default", "large"]
                  },
                  "title": {
                    "type": "string"
                  }
                },
                "required": ["id", "type", "resourceRefId"]
              }
            },
            "openModal": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["openModal"]
                  },
                  "name": {
                    "type": "string"
                  },
                  "resourceRefId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  },
                  "title": {
                    "type": "string"
                  }
                },
                "required": ["id", "type", "name", "resourceRefId"]
              }
            }
          },
          "additionalProperties": false
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["widgetData", "resourcesRefs", "actions"],
      "additionalProperties": false
    }
  },
  "required": ["kind", "spec", "version"]
}
