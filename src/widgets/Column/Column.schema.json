{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "description": "widget version",
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "type": "string",
      "description": "name of the k8s Custom Resource",
      "default": "Column"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "description": "the data that will be passed to the widget on the frontend",
          "type": "object",
          "required": ["items"],
          "properties": {
            "items": {
              "description": "the items of the row",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "resourceRefId": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "additionalProperties": false
        },
        "resourcesRefs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "apiVersion", "name", "namespace", "resource", "verb"],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "apiVersion": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "namespace": {
                "type": "string"
              },
              "resource": {
                "type": "string"
              },
              "verb": {
                "type": "string",
                "enum": ["GET", "POST", "DELETE"]
              }
            }
          }
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"]
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["widgetData", "backendEndpoints", "actions"]
    }
  },
  "required": ["kind", "spec", "version"]
}
