{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "type": "string",
      "default": "DataGrid"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "type": "object",
          "required": ["allowedResources", "items"],
          "properties": {
            "allowedResources": {
              "description": "the list of resources that are allowed to be children of this widget or referenced by it",
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "barcharts",
                  "buttons",
                  "buttongroups",
                  "eventlists",
                  "filters",
                  "flowcharts",
                  "forms",
                  "linecharts",
                  "markdowns",
                  "panels",
                  "paragraphs",
                  "piecharts",
                  "tables",
                  "tablists",
                  "yamlviewers"
                ]
              }
            },
            "asGrid": {
              "description": "to show children as list or grid",
              "type": "boolean"
            },
            "grid": {
              "description": "The grid type of list. You can set grid to something like {gutter: 16, column: 4} or specify the integer for columns based on their size, e.g. sm, md, etc. to make it responsive.",
              "type": "object",
              "properties": {
                "gutter": {
                  "type": "integer",
                  "description": "The spacing between grid"
                },
                "column": {
                  "type": "integer",
                  "description": "The column of grid"
                },
                "xs": {
                  "type": "integer",
                  "description": "<576px column of grid"
                },
                "sm": {
                  "type": "integer",
                  "description": "≥576px column of grid"
                },
                "md": {
                  "type": "integer",
                  "description": "≥768px column of grid"
                },
                "lg": {
                  "type": "integer",
                  "description": "≥992px column of grid"
                },
                "xl": {
                  "type": "integer",
                  "description": "≥1200px column of grid"
                },
                "xxl": {
                  "type": "integer",
                  "description": "≥1600px column of grid"
                }
              },
              "additionalProperties": false
            },
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["resourceRefId"],
                "properties": {
                  "resourceRefId": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            },
            "prefix": {
              "description": "it's the filters prefix to get right values",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"],
          "additionalProperties": false
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "resourcesRefs": {
          "type": "object",
          "properties": {
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "allowed": {
                    "type": "boolean"
                  },
                  "apiVersion": {
                    "type": "string"
                  },
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "namespace": {
                    "type": "string"
                  },
                  "payload": {
                    "type": "object"
                  },
                  "resource": {
                    "type": "string"
                  },
                  "verb": {
                    "type": "string",
                    "enum": ["POST", "PUT", "PATCH", "DELETE", "GET"]
                  },
                  "slice": {
                    "type": "object",
                    "properties": {
                      "offset": {
                        "type": "integer"
                      },
                      "page": {
                        "type": "integer"
                      },
                      "perPage": {
                        "type": "integer"
                      },
                      "continue": {
                        "type": "boolean"
                      }
                    },
                    "required": ["page", "perPage"]
                  }
                },
                "required": ["allowed", "id"]
              }
            }
          },
          "required": ["items"]
        }
      },
      "required": ["widgetData"],
      "additionalProperties": false
    }
  },
  "required": ["kind", "spec", "version"]
}
