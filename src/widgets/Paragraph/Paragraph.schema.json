{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "default": "Paragraph",
      "description": "Paragraph is a simple component used to display a block of text",
      "type": "string"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "type": "object",
          "required": ["text"],
          "properties": {
            "text": {
              "description": "the content of the paragraph to be displayed",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"],
          "additionalProperties": false
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["widgetData"],
      "additionalProperties": false
    }
  },
  "required": ["kind", "spec", "version"]
}
