{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "default": "v1beta1"
    },
    "kind": {
      "default": "NavMenuItem",
      "description": "NavMenuItem represents a single item in the navigation menu and links to a specific resource and route in the application",
      "type": "string"
    },
    "spec": {
      "type": "object",
      "properties": {
        "widgetData": {
          "type": "object",
          "required": ["allowedResources", "icon", "label", "path", "resourceRefId"],
          "properties": {
            "allowedResources": {
              "description": "the list of resources that are allowed to be children of this widget or referenced by it",
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["pages"]
              }
            },
            "icon": {
              "type": "string",
              "description": "name of the icon to display alongside the label (font awesome icon name eg: `fa-inbox`)"
            },
            "label": {
              "type": "string",
              "description": "text displayed as the menu item's label"
            },
            "order": {
              "type": "integer",
              "default": 100,
              "description": "a weight to be used to sort the items in the menu"
            },
            "path": {
              "type": "string",
              "description": "route path to navigate to when the menu item is clicked"
            },
            "resourceRefId": {
              "type": "string",
              "description": "the identifier of the k8s custom resource that should be represented, usually a widget"
            }
          },
          "additionalProperties": false
        },
        "apiRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "required": ["name", "namespace"],
          "additionalProperties": false
        },
        "widgetDataTemplate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "forPath": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "resourcesRefs": {
          "type": "object",
          "properties": {
            "slice": {
              "type": "object",
              "properties": {
                "offset": {
                  "type": "integer"
                },
                "page": {
                  "type": "integer"
                },
                "perPage": {
                  "type": "integer"
                },
                "continue": {
                  "type": "boolean"
                }
              },
              "required": ["page", "perPage"]
            },
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "allowed": {
                    "type": "boolean"
                  },
                  "apiVersion": {
                    "type": "string"
                  },
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "namespace": {
                    "type": "string"
                  },
                  "payload": {
                    "type": "object"
                  },
                  "resource": {
                    "type": "string"
                  },
                  "verb": {
                    "type": "string",
                    "enum": ["POST", "PUT", "PATCH", "DELETE", "GET"]
                  },
                  "slice": {
                    "type": "object",
                    "properties": {
                      "offset": {
                        "type": "integer"
                      },
                      "page": {
                        "type": "integer"
                      },
                      "perPage": {
                        "type": "integer"
                      },
                      "continue": {
                        "type": "boolean"
                      }
                    },
                    "required": ["page", "perPage"]
                  }
                },
                "required": ["allowed", "id"]
              }
            }
          },
          "required": ["items"]
        }
      },
      "required": ["widgetData"],
      "additionalProperties": false
    }
  },
  "required": ["kind", "spec", "version"]
}
