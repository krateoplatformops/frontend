{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "apiVersion": {
      "description": "kubernetes api version",
      "type": "string",
      "const": "widgets.templates.krateo.io/v1alpha1"
    },
    "Kind": {
      "type": "string",
      "const": "Button",
      "description": "name of the k8s Custom Resource"
    },
    "metadata": {
      "description": "kubernetes metadata",
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["namespace", "name"],
      "additionalProperties": false
    },
    "spec": {
      "type": "object",
      "required": ["widgetData", "actions", "backendEndpoints"],
      "properties": {
        "widgetData": {
          "description": "the data that will be passed to the widget on the frontend",
          "type": "object",
          "properties": {
            "color": {
              "description": "the color of the button",
              "type": "string",
              "enum": ["default", "primary", "success", "warning", "danger", "info"]
            },
            "label": {
              "description": "the label of the button",
              "type": "string"
            },
            "icon": {
              "description": "the icon of the button (font awesome icon name eg: 'fa-inbox')",
              "type": "string"
            },
            "size": {
              "description": "the size of the button",
              "type": "string",
              "enum": ["small", "middle", "large"]
            },
            "type": {
              "description": "the visual style of the button",
              "type": "string",
              "enum": ["default", "text", "link", "primary", "dashed"]
            },
            "clickActionId": {
              "description": "the id of the action to be executed when the button is clicked",
              "type": "string"
            }
          },
          "required": ["label", "clickActionId"],
          "additionalProperties": false
        },
        "actions": {
          "description": "the actions of the button",
          "type": "object",
          "properties": {
            "rest": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["rest"]
                  },
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "verb": {
                    "type": "string",
                    "enum": ["GET", "POST", "DELETE"]
                  },
                  "backendEndpointId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "onSuccessNavigateTo": {
                    "type": "string"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "verb", "backendEndpointId"]
              }
            },
            "navigate": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["navigate"]
                  },
                  "name": {
                    "type": "string"
                  },
                  "backendEndpointId": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "backendEndpointId"]
              }
            },
            "openDrawer": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["openDrawer"]
                  },
                  "name": {
                    "type": "string"
                  },
                  "contentWidgetRef": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "contentWidgetRef"]
              }
            },
            "openModal": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["openModal"]
                  },
                  "name": {
                    "type": "string"
                  },
                  "contentWidgetRef": {
                    "type": "string"
                  },
                  "requireConfirmation": {
                    "type": "boolean"
                  },
                  "loading": {
                    "type": "string",
                    "enum": ["global", "inline", "none"]
                  }
                },
                "required": ["id", "type", "name", "contentWidgetRef"]
              }
            }
          },
          "additionalProperties": false
        },
        "backendEndpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "endpoint", "verb"],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "endpoint": {
                "type": "string"
              },
              "verb": {
                "type": "string",
                "enum": ["GET", "POST", "DELETE"]
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["apiVersion", "Kind", "metadata", "spec"],
  "additionalProperties": false
}
